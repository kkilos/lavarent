
@{
    ViewBag.Title = "MantenimientoUsuarios";
    Layout = "~/Views/Shared/LayoutBase.cshtml";
}
@section styles{
    @Styles.Render("~/bundles/dataTables")

}
@section plugins{
    @Scripts.Render("~/bundles/dataTables")

}
@section scripts{
    <script src=@Url.Content("~/Scripts/Components-Plugins/gral_selector_simple_rol.js")></script>
    <script src=@Url.Content("~/Scripts/Components-Plugins/tabla-generica-1.0.8.js")></script>
    <script src="@Url.Content("~/ViewsScripts/Usuarios/MantenimientoUsuarios.1.0.0.js")"></script>
}

<h2>Mantenimiento de Usuarios</h2>

<div class="row-fluid">
    <div class="span12">
        <div class="portlet box oficial blue-chambray">
            <div class="portlet-title">
                <div class="caption">
                    <h4><i class="icon-reorder"></i>Usuarios</h4>
                </div>
                <div class="actions">
                    @*<button id="btnNuevo" class=" btn green"><i class=" icon-plus"></i>​ Nuevo  </button>*@
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">               
                        <table id="dtUsuarios" class="table table-striped table-bordered table-hover"></table>
            </div>
        </div>
    </div>
</div>



<div id="myModaModificar" class="modal container fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Modificar</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="id_cg_nombre_modificar" class="control-group">
                            <label class="control-label" for="id_nombre_modificar">Nombre Completo</label>
                            <div class="controls">
                                <input type="text" id="id_nombre_modificar" class="col-md-12" placeholder="Nombre completo" tabindex="1">
                                <span class="help-block">Nombre completo del usuario, empezando por nombre de pila</span>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                <div class="row">
                    <!--/span-->
                    <div class="col-md-12">
                        <div id="id_cg_rol_modificar" class="control-group">
                            <label class="control-label" for="id_rol_modificar">Rol</label>
                            <div class="controls">
                                <select id="id_rol_modificar" class="col-md-12 select2_category" data-placeholder="Choose a Category" tabindex="3"></select>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="control-group">
                            <label class="control-label" for="id_usuario_modificar">Usuario</label>
                            <div class="controls">
                                <span id="id_usuario_modificar" class="text">usuario</span>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6 ">
                        <div id="id_cg_contrasenia_modificar" class="control-group">
                            <label class="control-label" for="id_contrasenia_modificar">Contraseña</label>
                            <div class="controls">
                                <span>
                                    <input type="password" id="id_contrasenia_modificar" class="m-wrap col-md-8" placeholder="Contraseña" tabindex="5">
                                    <button id="id_ver_contrasenia" class="btn span3" tabindex="4">Ver</button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="control-group">
                            <label class="control-label" for="id_comentario_modificar">Comentarios</label>
                            <div class="controls">
                                <input type="text" id="id_comentario_modificar" class="m-wrap col-md-12" placeholder="Comentario" tabindex="6">
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="control-group">
                            <label class="control-label" for="id_usuario_creo">Usuario que dio Acceso</label>
                            <div class="controls">
                                <span id="id_usuario_creo" class="text">usuario_creo</span>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6 ">
                        <div class="control-group">
                            <label class="control-label" for="id_fechahora_creo">Fecha de creación</label>
                            <div class="controls">
                                <span id="id_fechahora_creo" class="text">fh_creo</span>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                <input type="hidden" id="guid_usuario_modificar" />
            </div>
            <div class="modal-footer">
                <button id="id_btn_cancelar" class="btn" data-dismiss="modal" aria-hidden="true" tabindex="8">Cancelar</button>
                <button id="id_btn_modificar" class="btn green" tabindex="7">Modificar</button>
            </div>
        </div>
    </div>
</div>


