
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutBase.cshtml";
}
@section styles{
    @Styles.Render("~/bundles/dataTables")
}
@section plugins{
    @Scripts.Render("~/bundles/dataTables")
}


@section scripts{
    
    <script src="@Url.Content("~/ViewsScripts/MembresiasClientes/Index.1.0.3.js")"></script>
}
<h1 class="page-title">
    Membresia de Clientes    
</h1>

<div class="row-fluid">
    <div class="span12">
        <div class="portlet box oficial">
            <div class="portlet-title">
                <div class="caption">
                    <h4><i class="icon-reorder"></i>&nbsp;&nbsp;Clientes</h4>
                </div>
                <div class="actions">
                    <button id="btnNuevo" class="btn green"><i class="icon-plus"></i>​ Nuevo  </button>
                </div>
                <div class="tools">

                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="reload"></a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: 100%; height: auto;">
                    <div class="scroller" data-width="100%" style="overflow: hidden; width: 100%; height: auto;">
                        <table id="dtClientes" class="table table-striped table-bordered table-hover"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
